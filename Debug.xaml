<Window x:Class="Safali.Debug"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Safali"
        mc:Ignorable="d"
        Title="Debug" Height="450" Width="360" ResizeMode="NoResize" Topmost="True">
    <Grid Background="#FF333333">
        <TextBox x:Name="log" TextWrapping="Wrap"  Margin="0,0,0,180" Background="#FF333333" Foreground="#FFD4D4D4"/>
        <Button x:Name="autoresize" Content="autoresize" HorizontalAlignment="Left" Margin="2,259,0,0" VerticalAlignment="Top" Click="autoresize_Click"/>
        <CheckBox x:Name="fullscreen" Content="FullScreen" HorizontalAlignment="Left" Margin="65,262,0,0" VerticalAlignment="Top" Foreground="#FFCCCCCC" Click="fullscreen_Click"/>
        <CheckBox x:Name="DevTools" Content="DevTools" HorizontalAlignment="Left" Margin="143,262,0,0" VerticalAlignment="Top" Foreground="#FFCCCCCC" Click="DevTools_Click" />
        <CheckBox x:Name="AlwaysTop" Content="AlwaysTop" HorizontalAlignment="Left" Margin="215,261,0,0" VerticalAlignment="Top" Foreground="#FFCCCCCC" Click="AlwaysTop_Click" />
        <Button x:Name="GetTitle" Content="GetTitle" HorizontalAlignment="Left" Margin="2,284,0,0" VerticalAlignment="Top" Width="58" Click="GetTitle_Click"/>
    </Grid>
</Window>
